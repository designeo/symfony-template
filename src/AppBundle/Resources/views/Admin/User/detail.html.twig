{% extends 'AppBundle:Admin:layout.html.twig' %}
{% block title %}{{ parent() }} - {{ user.getFullName }} {% endblock %}
{% block main_heading_content %}{{ user.getFullName }}{% endblock %}

{% block main_heading %}
     <div class="main-block-heading">
        <h1 class="pull-left">{{ user.getFullName }}</h1>

        <a class="btn btn-secondary btn-lg pull-right" href="#" title="Delete">
            <span class="lnr lnr-trash"></span>
        </a>

         <a class="btn btn-primary btn-lg pull-right" href="#" title="Edit">
             <span class="lnr lnr-pencil"></span>
         </a>
        <div class="clearfix"></div>
    </div>
{% endblock %}

{% block content %}

    <p>{{ user.email }}</p>
    <p>{{ user.userRoleName }}</p>
    <p>{{ 'admin.users.entity.enabled'|trans }}: {{ user.enabled|renderBool }}</p>
    <p>{{ 'admin.users.entity.lastLogin'|trans }}{% if user.lastLogin is not empty %}: {{ user.lastLogin|date('general.timestamp'|trans) }}{% endif %}</p>

{% endblock content %}