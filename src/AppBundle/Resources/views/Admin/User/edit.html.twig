{% extends 'AppBundle:Admin:layout.html.twig' %}
{% block title %}{{ parent() }} - {{ 'admin.users.title'|trans }} {% endblock %}
{% block main_heading_content %}{{ 'admin.users.title'|trans }}{% endblock %}


{% block main_heading %}
    <div class="page-heading">
        <h1>{{ title|trans }}</h1>
    </div>
{% endblock %}

{% block content %}

    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_name">{{ "admin.users.entity.email" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.email) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_title">{{ "admin.users.entity.password" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.plainPassword) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_description">{{ "admin.users.entity.firstName" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.firstName) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_description">{{ "admin.users.entity.lastName" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.lastName) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_content">{{ "admin.users.entity.enabled" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.enabled) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label for="appbundle_static_text_content">{{ "admin.users.entity.role" | trans }}</label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.userRole) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-3">
                {{ form_row(form.submit, {'label': 'admin.global.save'}) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock content %}