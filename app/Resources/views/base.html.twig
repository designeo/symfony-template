<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />
            <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,300,400italic,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

            <title>{% block title %}{{ 'web.brand'|trans }}{% endblock title %}</title>

            {% block meta %}
            {% endblock meta %}

            {% block head_css %}
                <link rel="stylesheet" href="{{ asset('/css/main.css') }}"/>
            {% endblock head_css %}
        {% endblock head %}
    </head>
    <body class="{% block body_class %}{% endblock body_class %}">
        {% block body %}
            {% block header %}
            {% endblock header %}

            {% block container %}
                <div class="container">

                    {% block flash_messages %}
                        {% for label, flashes in app.session.flashbag.all %}
                            {% for flash in flashes %}
                                <div class="alert alert-{{ label }} alert-dismissible">
                                    {{ flash|trans }}

                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock flash_messages %}

                {% block content %}{% endblock %}
                </div>
            {% endblock container %}

            {% block footer %}
            {% endblock footer %}

            {% block javascripts %}
                <script src="{{ asset('/js/libs.js') }}" type="application/javascript"></script>
                <script src="{{ asset('/js/main.js') }}" type="application/javascript"></script>
            {% endblock javascripts %}

        {% endblock body %}
    </body>
</html>
