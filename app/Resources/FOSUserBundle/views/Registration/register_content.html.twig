

{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="panel">
            <div class="panel-heading">
                <img src="/img/logo-admin.png" width="340" alt="" class="img-responsive">
            </div>


            <form action="{{ path('fos_user_registration_register') }}" method="POST"
                  class="form-horizontal fos_user_registration_register">
                {{ form_start(form) }}

                {{ form_errors(form) }}

                {#{% if error %}#}
                {#<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
                {#{% endif %}#}

                <div class="form-group">
                    <h2>{{ page_title }}</h2>
                </div>

                <div class="form-group">
                    {{ form_label(form.firstName, null,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.lastName, null,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.lastName) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email, null,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.email) }}
                    </div>
                </div>

                <div class="form-group">
                  {{ form_label(form.plainPassword.first, null,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                </div>

                <div class="form-group form-group-agree">
                    <div class="col-sm-9 col-sm-offset-3">
                        {{ form_widget(form.agreeToS) }}
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <input class="btn btn-submit btn-block" type="submit"
                               value="{{ 'registration.submit'|trans }}"/>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>


        </div>
    </div>
</div>