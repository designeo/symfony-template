{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-4 col-md-offset-4 well">

        <form action="{{ path('fos_user_registration_register') }}" {{ form_start(form) }} method="POST" class="fos_user_registration_register">
            {{ form_errors(form) }}


            <div class="form-group">
                {{ form_row(form.firstName) }}
            </div>


            <div class="form-group">
                {{ form_row(form.lastName) }}
            </div>


            <div class="form-group">
                {{ form_row(form.email) }}
            </div>

            <div class="form-group">
                {{ form_row(form.plainPassword) }}
            </div>

            <div class="form-group checkbox">
                {{ form_row(form.agreeToS, {'label': 'web.registration.agreeTermsOfService'}) }}
            </div>

            <div>
                <input type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>

            {{ form_rest(form) }}
        </form>

    </div>
</div>